<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/clear"
        android:layout_width="246dp"
        android:layout_height="64dp"
        android:layout_marginTop="332dp"
        android:backgroundTint="@color/black"
        android:text="CLEAR"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.224"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/division"
        android:layout_width="64dp"
        android:layout_height="64dp"

        android:text="/"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="@+id/clear"

        app:layout_constraintEnd_toEndOf="@+id/multiBtn" />

    <Button
        android:id="@+id/num7"
        android:layout_width="64dp"
        android:layout_height="64dp"

        android:layout_marginTop="16dp"
        android:text="7"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="@+id/clear"
        app:layout_constraintTop_toBottomOf="@+id/clear" />

    <Button
        android:id="@+id/num8"
        android:layout_width="64dp"
        android:layout_height="64dp"

        android:layout_marginLeft="32dp"
        android:text="8"
        android:textSize="28sp"
        app:layout_constraintStart_toEndOf="@+id/num7"
        app:layout_constraintTop_toTopOf="@+id/num7" />

    <Button
        android:id="@+id/num9"
        android:layout_width="64dp"
        android:layout_height="64dp"

        android:layout_marginLeft="32dp"
        android:text="9"
        android:textSize="28sp"
        app:layout_constraintStart_toEndOf="@+id/num8"
        app:layout_constraintTop_toTopOf="@+id/num7" />

    <Button
        android:id="@+id/multiBtn"
        android:layout_width="64dp"
        android:layout_height="64dp"

        android:layout_marginLeft="32dp"
        android:text="*"
        android:textSize="28sp"
        app:layout_constraintStart_toEndOf="@+id/num9"
        app:layout_constraintTop_toTopOf="@+id/num7" />

    <Button
        android:id="@+id/num4"
        android:layout_width="64dp"
        android:layout_height="64dp"

        android:layout_marginTop="80dp"
        android:text="4"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="@+id/num7"
        app:layout_constraintTop_toTopOf="@id/num7" />

    <Button
        android:id="@+id/num5"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="32dp"

        android:text="5"
        android:textSize="28sp"
        app:layout_constraintStart_toEndOf="@+id/num4"
        app:layout_constraintTop_toTopOf="@+id/num4" />

    <Button
        android:id="@+id/num6"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="32dp"
        android:text="6"
        android:textSize="28sp"
        app:layout_constraintStart_toEndOf="@+id/num5"
        app:layout_constraintTop_toTopOf="@+id/num4" />

    <Button
        android:id="@+id/subtraction"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="32dp"
        android:text="-"
        android:textSize="28sp"
        app:layout_constraintStart_toEndOf="@+id/num6"
        app:layout_constraintTop_toTopOf="@+id/num4" />

    <Button
        android:id="@+id/num1"
        android:layout_width="64dp"
        android:layout_height="64dp"

        android:layout_marginTop="80dp"
        android:text="1"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="@+id/num4"
        app:layout_constraintTop_toTopOf="@id/num4" />

    <Button
        android:id="@+id/num2"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="32dp"

        android:text="2"
        android:textSize="28sp"
        app:layout_constraintStart_toEndOf="@+id/num1"
        app:layout_constraintTop_toTopOf="@+id/num1" />

    <Button
        android:id="@+id/num3"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="32dp"
        android:text="3"
        android:textSize="28sp"
        app:layout_constraintStart_toEndOf="@+id/num2"
        app:layout_constraintTop_toTopOf="@+id/num2" />

    <Button
        android:id="@+id/addtion"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="32dp"
        android:text="+"
        android:textSize="28sp"
        app:layout_constraintStart_toEndOf="@+id/num3"
        app:layout_constraintTop_toTopOf="@+id/num3" />

    <Button
        android:id="@+id/num0"
        android:layout_width="64dp"
        android:layout_height="64dp"

        android:layout_marginTop="80dp"
        android:text="0"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="@+id/num1"
        app:layout_constraintTop_toTopOf="@id/num1" />


    <Button
        android:id="@+id/decimalBtn"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="32dp"

        android:text="."
        android:textSize="28sp"
        app:layout_constraintStart_toEndOf="@+id/num0"
        app:layout_constraintTop_toTopOf="@+id/num0" />

    <Button
        android:id="@+id/equal"
        android:layout_width="160dp"
        android:layout_height="64dp"
        android:layout_marginLeft="32dp"
        android:backgroundTint="@color/black"
        android:text="="
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintStart_toEndOf="@+id/decimalBtn"
        app:layout_constraintTop_toTopOf="@+id/decimalBtn" />

    <TextView
        android:id="@+id/result"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:text=""
        android:textAlignment="textEnd"

        android:textColor="@color/black"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/division"
        app:layout_constraintEnd_toEndOf="@+id/division" />

    <TextView
        android:id="@+id/toShowTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text=""
        android:textSize="22sp"

        app:layout_constraintBottom_toTopOf="@+id/result"
        app:layout_constraintEnd_toEndOf="@+id/result"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>